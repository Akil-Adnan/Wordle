{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "pages/**/*.tsx", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/keywords", "dest": "/api/keywords.ts" }
  ],
  "crons": [
    {
      "path": "/api/keywords",
      "schedule": "0 */18 * * *"
    }
  ]
}
